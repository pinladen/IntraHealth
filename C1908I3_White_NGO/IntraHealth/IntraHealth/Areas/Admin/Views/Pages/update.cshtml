@model IntraHealth.Models.Page
@{
    ViewData["Title"] = "create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            update Intralhealth <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-area="admin" asp-controller="home" asp-action="index">Home</a></li>
            <li><a asp-area="admin" asp-controller="pages" asp-action="lsit">page</a></li>
            <li><a asp-area="admin" asp-controller="pages" asp-action="update" class="active">Update</a></li>
        </ol>
    </div>
    <div id="page-inner">
        <div class="row">
            <div class="col-md-10 ">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        page event
                    </div>
                    <div class="panel-body">
                        <form method="post" enctype="multipart/form-data" asp-area="admin" asp-controller="pages" asp-action="updates">
                            <div class="modal-body">

                                <div hidden class="form-group">
                                    <label for="exampleInputEmail1">Name </label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter name" asp-for="IdPage" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Name </label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter name" asp-for="NamePage">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputAuthor">Title</label>
                                    <input type="text" class="form-control" id="exampleInputAuthor" placeholder="Enter Title" asp-for="TitlePage">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputAddress">Author</label>
                                    <input type="text" class="form-control" id="exampleInputAddress" placeholder="Enter Author" asp-for="AuthorPage">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputmount">TimeCreate</label>
                                    <input type="date" class="form-control" id="exampleInputmount" placeholder="0" asp-for="TimeCreatePage" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputAmoutAchieved">Content</label>
                                    <textarea class="form-control" rows="5" id="editor" asp-for="ContentPage"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputStarttime">Image</label>
                                    <input type="text" class="form-control" id="exampleInputStarttime" asp-for="PhotoPage" readonly>
                                    <img src="~/user/assets/images/pages/@ViewBag.image" width="150" height="100" style="border:1px dotted black" />
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputStarttime">New image</label>
                                    <input type="file"  name="file"/>                                   
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEndtime">IdCategory </label>
                                    <select asp-for="IdCategory" asp-items="@ViewBag.category" class="form-control">
                                        <option disabled selected>--- SELECT ---</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputEndtime">Status</label>
                                    <select asp-for="StatusPage" class="form-select">
                                        <option style="color:green" value="true">Hoạt đông</option>
                                        <option style="color:red" value="false">không hoạt động</option>
                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Save changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

