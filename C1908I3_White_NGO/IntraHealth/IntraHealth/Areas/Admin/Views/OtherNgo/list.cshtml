
@{ ViewData["Title"] = "index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; }

<h2>index</h2>


@{ ViewData["Title"] = "list";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; }

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Event Intralhealth <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-area="admin" asp-controller="home" asp-action="index">Home</a></li>
            <li><a asp-area="admin" asp-controller="otherngo" asp-action="list">Other Ngo</a></li>

        </ol>
    </div>
    <div id="page-inner">
        <div class="row">
            <div class="col-md-2">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Create Other NGo
                    </div>
                    <div class="panel-body">
                        <a class="btn btn-primary" asp-area="admin" asp-controller="otherngo" asp-action="create">otherngo New</a>
                    </div>
                </div>
            </div>

        </div>
        <!--List table-->
        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Event managerment
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive ">
                            <table class="table table-striped table-bordered table-hover " id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>IdNgo</th>
                                        <th>NameNgo</th>
                                        <th>UrlNgo</th>
                                        <th>InforNgo </th>
                                        <th>JoinDateNgo time</th>
                                        <th>StatusNgo</th>
                                        
                                        <th>Option</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var oth in ViewBag.oth)
                                    {
                        <tr class="odd gradeX">
                            <td>@oth.IdNgo</td>
                            <td>@oth.NameNgo</td>
                            <td>@oth.UrlNgo</td>
                            <td>@oth.InforNgo</td>
                            <td>@oth.JoinDateNgo</td>
                            <td>@oth.StatusNgo</td>
                            <td>
                                <a asp-area="admin" asp-controller="otherngo" asp-action="detail" asp-route-id="@oth.IdNgo" class="btn btn-info">Detail</a> |
                                <a asp-area="admin" asp-controller="otherngo" asp-action="update" asp-route-id="@oth.IdNgo" class="btn btn-primary">Update</a> |
                                <a asp-area="admin" asp-controller="otherngo" asp-action="delete" asp-route-id="@oth.IdNgo" class="btn btn-warning" onclick="return confirm('Are you sure')">Delete</a>
                            </td>
                        </tr>
}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
        <footer><p>All right reserved. Template by: <a href="http://webthemez.com">WebThemez.com</a></p></footer>
    </div>
    <!-- /. PAGE INNER  -->
</div>

