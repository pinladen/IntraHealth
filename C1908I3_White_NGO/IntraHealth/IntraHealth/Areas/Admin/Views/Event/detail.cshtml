@model IntraHealth.Models.EventN
@{
    ViewData["Title"] = "detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Event Intralhealth <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-area="admin" asp-controller="home" asp-action="index">Home</a></li>
            <li><a asp-area="admin" asp-controller="events" asp-action="index">Event</a></li>
            <li><a asp-area="admin" asp-controller="events" asp-action="create" class="active">Detail</a></li>
        </ol>
    </div>
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        Detail event
                    </div>
                    <div class="panel-body">
                        <div hidden class="form-group">
                            <label for="exampleInputEmail1">Name event</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" asp-for="IdEvent">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Name event</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" asp-for="NameEvent">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputAuthor">Author</label>
                            <input type="text" class="form-control" id="exampleInputAuthor" asp-for="AuthorEvent">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputAddress">Address</label>
                            <input type="text" class="form-control" id="exampleInputAddress" asp-for="AddressEvent">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputmount">Mount</label>
                            <input type="number" class="form-control" id="exampleInputmount" asp-for="MoutEvent">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputStarttime">Start time</label>
                            <input type="date" class="form-control" id="exampleInputStarttime" asp-for="StartDateEvent">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEndtime">End time</label>
                            <input type="date" class="form-control" id="exampleInputEndtime" asp-for="EndDateEvent">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputContent">Content</label>
                            <textarea class="form-control" rows="5" id="editor" asp-for="ContentEvent"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Photo event</label>
                            <img src="~/user/assets/images/events/@ViewBag.photo" width="350" height="200" style="border:1px solid black;border-radius:1px" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEndtime">Status</label>
                            <select asp-for="StatusEvent">
                                <option style="color:green" value="true">Hoạt đông</option>
                                <option style="color:red" value="false">không hoạt động</option>
                            </select>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







