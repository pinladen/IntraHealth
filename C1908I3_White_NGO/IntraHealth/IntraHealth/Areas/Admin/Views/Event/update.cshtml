@model IntraHealth.Models.EventN
@{
    ViewData["Title"] = "update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Event Intralhealth <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-area="admin" asp-controller="home" asp-action="index">Home</a></li>
            <li><a asp-area="admin" asp-controller="event" asp-action="index">Event</a></li>
            <li><a asp-area="admin" asp-controller="event" asp-action="update" class="active">Update</a></li>
        </ol>
    </div>
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        Update Evnet
                    </div>
                    <div class="panel-body">
                        
                        <form method="post" enctype="multipart/form-data" asp-area="admin" asp-controller="event" asp-action="updates">
                            <div class="modal-body">
                                <div hidden class="form-group">
                                    <label for="exampleInputEmail1">ID event</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter name" asp-for="IdEvent" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Name event</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter name" asp-for="NameEvent">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputAuthor">Author</label>
                                    <input type="text" class="form-control" id="exampleInputAuthor" placeholder="Enter author" asp-for="AuthorEvent">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputAddress">Address</label>
                                    <input type="text" class="form-control" id="exampleInputAddress" placeholder="Enter address" asp-for="AddressEvent">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputmount">Mount</label>
                                    <input type="number" class="form-control" id="exampleInputmount" placeholder="0" asp-for="MoutEvent">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputmount">Mount</label>
                                    <input type="number" class="form-control" id="exampleInputmount" placeholder="0" asp-for="AmoutAchievedEvent" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputStarttime">Start time</label>
                                    <input type="date" class="form-control" id="exampleInputStarttime" asp-for="StartDateEvent">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEndtime">End time</label>
                                    <input type="date" class="form-control" id="exampleInputEndtime" asp-for="EndDateEvent">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEndtime">Time create</label>
                                    <input type="date" class="form-control" id="exampleInputEndtime" asp-for="TimeCreateEvent" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputContent">Content</label>
                                    <textarea class="form-control" rows="5" id="editor" asp-for="ContentEvent"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEndtime">Photo </label>
                                    <input  type="text" asp-for="PhotoEvent"  readonly/>
                                    <img src="~/user/assets/images/events/@ViewBag.image"  width="450" height="300" style="border:2px dotted black; border-radius:3px ;margin:5px; padding:2px" />
                                    <input type="file" class="form-control" name="file">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEndtime">Status</label>
                                    <select asp-for="StatusEvent">
                                        <option class="text-success" value="true">active</option>
                                        <option class="text-danger" value="false">inactive</option>
                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

