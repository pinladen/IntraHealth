@model IntraHealth.Models.NotificationN
@{
    ViewData["Title"] = "create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Event Intralhealth <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-area="admin" asp-controller="home" asp-action="index">Home</a></li>
            <li><a asp-area="admin" asp-controller="noitification" asp-action="list">notification</a></li>
            <li><a asp-area="admin" asp-controller="noitification" asp-action="update" class="active">update</a></li>
        </ol>
    </div>
    <div id="page-inner">
        <div class="row">
            <div class="col-md-10 ">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        New event
                    </div>
                    <div class="panel-body">
                        <form method="post" asp-area="admin" asp-controller="noitification" asp-action="updates">
                            <div class="modal-body">
                                <div hidden class="form-group">
                                    <label for="exampleInputEmail1">Name event</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter name" asp-for="IdNotification">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputAuthor">FromAdmin</label>
                                    <input type="text" class="form-control" id="exampleInputAuthor" placeholder="Enter author" asp-for="FromAdmin">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputAddress">IdUser</label>
                                    <input type="number" class="form-control" id="exampleInputAddress" placeholder="Enter address" asp-for="IdUser">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputmount">TextNotification</label>
                                    <input type="number" class="form-control" id="exampleInputmount" placeholder="0" asp-for="TextNotification">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputAmoutAchieved">SendTimeNotification</label>
                                    <input type="date" class="form-control" id="exampleInputAmoutAchieved" placeholder="0" asp-for="SendTimeNotification">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEndtime">Status</label>
                                    <select asp-for="StatusNotification" class="form-select">
                                        <option style="color:green" value="true">Hoạt đông</option>
                                        <option style="color:red" value="false">không hoạt động</option>
                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Save changes</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

