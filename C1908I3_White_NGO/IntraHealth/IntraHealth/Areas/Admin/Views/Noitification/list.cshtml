
@{
    ViewData["Title"] = "list";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            notification Intralhealth <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-area="admin" asp-controller="home" asp-action="index">Home</a></li>
            <li><a asp-area="admin" asp-controller="noitification" asp-action="list" class="active">Notification</a></li>

        </ol>
    </div>
    <div id="page-inner">
        <!--List table-->
        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-warning " style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
                    <div class="panel-heading">
                        <h2>Send mess</h2>  
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive ">
                            <table class="table table-striped table-bordered table-hover " id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>id</th>
                                        <th>form</th>
                                        <th>idUser</th>
                                        <th>TextNotification </th>
                                        <th>time Create</th>
                                        <th>SendTimeNotification </th>
                                        <th>Status</th>                                      
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.ev != null)
                                    {
                                        foreach (var ev in ViewBag.ev)
                                        {
                                            <tr class="odd gradeX">
                                                <td>@ev.IdNotification</td>
                                                <td>@ev.FromAdmin</td>
                                                <td>@ev.IdUser</td>
                                                <td>@ev.TextNotification</td>
                                                <td>@ev.SendTimeNotification</td>
                                                <td>@ev.StatusNotification</td>
                                                @if (ev.StatusNotification == true)
                                                {
                                                    <td class="text-success">active</td>
                                                }
                                                else if (ev.StatusNotification == null)
                                                {
                                                    <td class="text-success">inactive</td>
                                                }
                                                else
                                                {
                                                    <td class="text-success">inactive</td>
                                                }                                              
                                            </tr>
                                        }

                                    }
                                    else
                                    {
                                        @ViewBag.err
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
        <footer><p>All right reserved. Template by: <a href="http://webthemez.com">WebThemez.com</a></p></footer>
    </div>
    <!-- /. PAGE INNER  -->
</div>

