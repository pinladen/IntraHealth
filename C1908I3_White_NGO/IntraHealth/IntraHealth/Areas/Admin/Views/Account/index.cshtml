
@{
    ViewData["Title"] = "index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            User Intralhealth <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-area="admin" asp-controller="home" asp-action="index">Home</a></li>
            <li><a asp-area="admin" asp-controller="event" asp-action="list" class="active">Event</a></li>

        </ol>
    </div>
    <div id="page-inner">
        <!--List table-->
        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-primary " style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
                    <div class="panel-heading">
                        User table  <a class="badge badge-success" asp-area="admin" asp-controller="account" asp-action="create"> New user <i class="fa fa-plus"></i></a><br />
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive ">
                            <table class="table table-striped table-bordered table-hover " id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Id.</th>
                                        <th>Avatar</th>
                                        <th>Username</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Time create</th>
                                        <th>Role</th>
                                        <th>Status</th>
                                        <th>Option</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in ViewBag.users)
                                    {
                                    <tr>

                                        <td>@user.IdUser</td>
                                        <td class="text-center">
                                            <img src="~/images/avatar/@user.AvatarUser" width="40" height="40" style="border-radius: 50%;box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;" />
                                        </td>
                                        <td>@user.UsernameUser</td>
                                        <td>@user.FistNameUser</td>
                                        <td>@user.EmailUser</td>
                                        <td>+84 @user.PhoneUser</td>
                                        <td>@user.TimeCreateUser</td>
                                        @if (user.IdRole == 1)
                                        {
                                            <td class="text-primary fw-bold">Admin</td>
                                        }
                                        else if (user.IdRole == 2)
                                        {
                                            <td class="text-info">User</td>
                                        }
                                        else
                                        {
                                            <td class="text-danger">defaut</td>
                                        }
                                        @if (user.StatusUser == true)
                                        {
                                            <td class="text-success">active</td>
                                        }
                                        else if (user.StatusUser == null)
                                        {
                                            <td class="text-danger">inactive</td>
                                        }
                                        else
                                        {
                                            <td class="text-danger">inactive</td>
                                        }
                                        <td class="text-center">
                                            <a asp-area="admin" asp-controller="account" asp-action="detail" asp-route-id="@user.IdUser" class="btn btn-info" style="box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;" title="Detail">
                                                <i class="fa fa-eye "></i>
                                            </a>
                                            <a asp-area="admin" asp-controller="account" asp-action="update" asp-route-id="@user.IdUser" class="btn btn-warning" style="box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;">
                                                <i class="fa fa-pencil-square-o"></i>
                                            </a>
                                            <a asp-area="admin" asp-controller="account" asp-action="delete" asp-route-id="@user.IdUser" class="btn btn-danger" onclick="return confirm('Are you sure you want delete user ?')" style="box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;">
                                                <i class="fa fa-trash-o"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
        <footer><p>All right reserved. Template by: <a href="http://webthemez.com">WebThemez.com</a></p></footer>
    </div>
    <!-- /. PAGE INNER  -->
</div>






