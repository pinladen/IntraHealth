@model IntraHealth.Models.AccountN
@{
    ViewData["Title"] = "create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            User Intralhealth <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-area="admin" asp-controller="home" asp-action="index">Home</a></li>
            <li><a asp-area="admin" asp-controller="events" asp-action="index">User</a></li>
            <li><a asp-area="admin" asp-controller="events" asp-action="create" class="active">Create</a></li>
        </ol>
    </div>
    <div id="page-inner">
        <div class="row">
            <div class="col-md-9 ">
                <div class="panel panel-primary" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
                    <div class="panel-heading">
                        New user
                    </div>
                    <div class="panel-body">
                        <form method="post" enctype="multipart/form-data" asp-area="admin" asp-controller="account" asp-action="Create">
                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Fist name</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter name" asp-for="FistNameUser">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputAuthor">Last name</label>
                                    <input type="text" class="form-control" id="exampleInputAuthor" placeholder="Enter author" asp-for="LastNameUser">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputAddress">Username :</label>
                                    <input type="text" class="form-control" id="exampleInputAddress" placeholder="Enter address" asp-for="UsernameUser">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputAmoutAchieved">Email</label>
                                    <input type="email" class="form-control" id="exampleInputAmoutAchieved" placeholder="Enter email" asp-for="EmailUser">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputAmoutAchieved">Phone</label>
                                    <input type="tel" class="form-control" id="exampleInputAmoutAchieved" placeholder="0" asp-for="PhoneUser">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputmount">Password</label>
                                    <input type="password" class="form-control" id="exampleInputmount" placeholder="***" asp-for="PasswordUser">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputmount">Avatar</label>
                                    @*<input type="file" class="form-control" id="exampleInputmount">*@
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEndtime">Status</label>
                                    <select asp-for="StatusUser" class="form-select">
                                        <option style="color:green" value="true">Hoạt đông</option>
                                        <option style="color:red" value="false">không hoạt động</option>
                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary" style="box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;">Save changes</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        

    </div>
</div>

